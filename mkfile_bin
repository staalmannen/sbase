APE=/sys/src/ape
<$APE/config

TARG=\
	basename\
	cp\


HFILES=\
	utf.h\
	util.h


UPDATE=\
	mkfile.bin\
	$HFILES\
	${OFILES:%.$O=%.c}


BIN=/$objtype/bin/ape

</sys/src/cmd/mkmany

CFLAGS= -c -D_POSIX_SOURCE -D_BSD_EXTENSION 

$O.out:	./libutil/libutil.a$O ./libutf/libutf.a$O

install:V:
	mkdir -p /sys/man/1ape
	for (i in $TARG)
		@{ cp $O.$i $BIN/$i; 
		cp $i.1 /sys/man/1ape/$i }

nuke:V:
	for (i in $TARG)
		@{ rm -f $BIN/$i; 
		rm -f /sys/man/1ape/$i }
